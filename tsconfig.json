{
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "declaration": true,
    "sourceMap": false,
    "outDir": "build",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "build",
    "tmp",
    "test",
    "**/*.test.ts"
  ]
}
